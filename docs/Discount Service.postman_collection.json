	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"requests": {},
				"exec": [
					"const keycloakUrl = \"http://localhost:8081/realms/discount-realm/protocol/openid-connect/token\";\r",
					"const realm = \"discount-realm\";\r",
					"const clientId = \"discount\";\r",
					"const username = \"employee\";\r",
					"const password = \"emp@password\";\r",
					"const grantType = \"password\";\r",
					" \r",
					"pm.sendRequest({\r",
					"    url: keycloakUrl,\r",
					"    method: \"POST\",\r",
					"    header: {\r",
					"        \"Content-Type\": \"application/x-www-form-urlencoded\"\r",
					"    },\r",
					"    body: {\r",
					"        mode: \"urlencoded\",\r",
					"        urlencoded: [\r",
					"            { key: \"client_id\", value: clientId },\r",
					"            { key: \"username\", value: username},\r",
					"            { key: \"password\", value: password},\r",
					"            { key: \"grant_type\", value: grantType }\r",
					"        ]\r",
					"    }\r",
					"}, function (err, res) {\r",
					"    if (err) {\r",
					"        console.error(\"Token request failed:\", err);\r",
					"    } else {\r",
					"        let jsonData = res.json();\r",
					"        let token = jsonData.access_token;\r",
					" \r",
					"        if (token) {\r",
					"            // Store the token in an environment variable\r",
					"            console.log(token)\r",
					"            pm.collectionVariables.set(\"keycloak_token\", token);\r",
					"            \r",
					"            // Alternatively, store it in a collection variable (if needed)\r",
					"            // pm.collectionVariables.set(\"keycloak_token\", token);\r",
					" \r",
					"            console.log(\"Token assigned to variable: keycloak_token\");\r",
					"        } else {\r",
					"            console.error(\"No token received. Response:\", jsonData);\r",
					"        }\r",
					"    }\r",
					"});"
				]
			}
